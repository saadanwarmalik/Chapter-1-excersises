//simple operators
#include <iostream>
using namespace std;
int main()
{
    cout << "      Maths Operations       " << endl;
    
    int num1, num2;
    cout << "Enter 1st number: ";
    cin >> num1;
    cout << "Enter 2nd number: ";
    cin >> num2;
    
    
    cout << "Sum: " << num1 + num2 << endl;
    cout << "Diff: " << num1 - num2 << endl;
    cout << "Product: " << num1 * num2 << endl;
    cout << "Quotient: " << num1 / num2 << endl;
    cout << "Remainder: " << num1 % num2 << endl;
    
    return 0;

}